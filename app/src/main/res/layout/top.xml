<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#00acff"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="#00acff">


        <ImageView
            android:id="@+id/back_img"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="back"
            android:src="@drawable/ease_mm_title_back" />

        <TextView
            android:id="@+id/top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="好友请求"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ac_iv_search"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:clickable="true" />

            <ImageView
                android:id="@+id/top_add"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/title_add" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>