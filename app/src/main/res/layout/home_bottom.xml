<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/tab_Message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/id_Message_img"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:src="@mipmap/icon_2_d"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/id_Message_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_Message_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="会话"
                    android:textColor="#abadbb"
                    android:textSize="12sp" />

            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_Contact"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/id_Contact_img"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:src="@mipmap/icon_1_d"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/id_Contact_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_Contact_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="好友"
                    android:textColor="#abadbb"
                    android:textSize="12sp" />

            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_Mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/id_Mine_img"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:src="@mipmap/icon_3_d"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/id_Mine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_Mine_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="我"
                    android:textColor="#abadbb"
                    android:textSize="12sp" />

            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>


</LinearLayout>